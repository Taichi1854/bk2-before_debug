      </ul>
	</div>
  <% end %>

  <h2>User info</h2>

  <%= form_for @user,:url => {controller: "users", action: "update"}, method: :patch do |f| %>

	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
	</div>

	<div class="field">
		<%= f.label :image %>
		<%= f.attachment_field :profile_image %>
	</div>

	<div class="field">
		<%= f.label :introduction %>
		<%= f.text_area :introduction %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

  <% end %>